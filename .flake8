[flake8]
max-line-length = 120
extend-ignore =
    E203,
    W503,
    E501,
    E226
select = E,F,W,C90,B,C
exclude = .git,__pycache__,build,dist,*.egg-info
per-file-ignores = __init__.py:F401

# E,F,W: Default flake8 errors and warnings
# C90: McCabe complexity
# B: flake8-bugbear
# C: flake8-comprehensions
