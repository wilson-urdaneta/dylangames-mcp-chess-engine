{
  "mcpServers": {
    "chess_engine": {
      "command": "/opt/homebrew/bin/poetry",
      "args": [
        "run",
        "python",
        "-m",
        "dylangames_mcp_chess_engine.main"
      ],
      "cwd": "/path/to/package/dylangames-mcp-chess-engine",
      "transport": "stdio",
      "env": {
        "ENGINE_PATH": "/path/to/stockfish"
      }
    }
  }
}
